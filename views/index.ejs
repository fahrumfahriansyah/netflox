<%- include('../layouts/header') %>


    <div class="container mt-5 contentDftr">
        <% if (judul==='netflox' ) { %>
            <% if (typeof error !=='undefined' ) { %>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="alert alert-danger" role="alert">
                            <ul>
                                <% error.forEach(error=> { %>
                                    <li>
                                        <%= error.msg %>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
                <% } %>
                    <h1>login</h1>
                    <div class="row">
                        <div class="col-sm-12">
                            <form method="post" action="/" class="form">
                                <div class="mb-3 mt-2">
                                    <label for="email" class="form-label">Email address</label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="password class=" form-label">Password</label>
                                    <input type="password" class="form-control" id="password" name="password" required>
                                </div>

                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                    <% } else if (judul==='daftar' ) { %>
                        <% if (typeof error !=='undefined' ) { %>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="alert alert-danger" role="alert">
                                        <ul>
                                            <% error.forEach(error=> { %>
                                                <li>
                                                    <%= error.msg %>
                                                </li>
                                                <% }) %>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                                <h1>daftar</h1>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <form method="post" action="/daftar" class="form">
                                            <div class="mb-3 mt-2">
                                                <label for="email" class="form-label">Email address</label>
                                                <input type="email" class="form-control" id="email" name="email"
                                                    required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="exampleInputPassword1" class="form-label">Password</label>
                                                <input type="password" class="form-control" id="password"
                                                    name="password" required>
                                            </div>

                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </form>
                                    </div>
                                </div>
                                <% } else{%>
                                    <div class="container px-4 text-center">
                                        <div class="row gx-5 ">
                                            <div class="col-sm-12">
                                                <div class="p-3 bg-light bgcsearch">
                                                    <h1 class="textShdw">Search vidio <i class="bi bi-search"></i></h1>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row ps-5">
                                        <div class="col-sm-12 conten">
                                            <div class=" row text-center mt-5 ">
                                                <% api.forEach(a=> { %>
                                                    <div class=" card col-sm-4 mt-5 ms-2 me-2 pt-3 "
                                                        style="width: 30%;">
                                                        <% if (a.Poster==='N/A' ) { %>
                                                            <h2><strong>tidak ada
                                                                    gambar</strong></h2>
                                                            <% } else {%>
                                                                <img src="<%= a.Poster %>" class="card-img-top"
                                                                    alt="...">
                                                                <% } %>
                                                                    <div class="card-body">
                                                                        <h5 class="card-title">
                                                                            <%= a.Title %>
                                                                        </h5>

                                                                        <p>Years: <%= a.Year %>
                                                                        </p>
                                                                        <p>
                                                                            type: <%= a.Type %>
                                                                        </p>
                                                                    </div>
                                                    </div>
                                                    <% }) %>
                                            </div>
                                        </div>
                                    </div>
    </div>



    </div>
    </div>

    <% } %>

        <%- include('../layouts/footer') %>